{
  "Routes": [
    {
      "DownstreamPathTemplate": "/{signalR}",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/ws/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "DangerousAcceptAnyServerCertificateValidator": true,
      "WebSocketOptions": {
        "WebSocketEnabled": true,
        "WebSocketEvent": "OnStarting"
      }
    },
    {
      "DownstreamPathTemplate": "/api/someservice",
      "UpstreamPathTemplate": "/api/someservice",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      "DelegatingHandlers": [
        "AuthenticationHandler"
      ]
    }
  ]
}